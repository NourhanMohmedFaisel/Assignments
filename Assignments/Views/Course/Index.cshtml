@model List<Course>
@{
    ViewData["Title"] = "Index";
    Layout = "_MyLayout";
}

<h1>Index</h1>
<a href="/Course/Add" class="btn btn-success"> New</a>
<table class="table table-hover table-bordered">
    <tr>
        <th>Course ID</th>
        <th>Course Name</th>
        <th>Course Degree</th>
        <th>Course MinDegree</th>
        <th>Course Hours</th>
        <th>Course Details</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>

            
            <td>@item.Degree</td>
            <td>@item.MinDegree</td>
            <td>@item.Hours</td>

            <td>
                <a href="/Course/Details?id=@item.Id">Go to Course</a>
            </td>
        </tr>
    }
</table>

