@model List<Instractor>
@{
    ViewData["Title"] = "ViewAllInstractor";
}

<h1>ViewAllInstractor</h1>
<a href="/Instractor/Add" class="btn btn-success"> New</a>
<table class="table table-hover table-bordered">
    <tr>
        <th>Instractor ID</th>
        <th>Instractor Name</th>
        <th>Instractor Image</th>
        <th>Instractor Salary</th>
        <th>Instractor Address</th>
        <th>Instractor Details</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
           
            <td>
                <img src="/Images/@item.Imag"  style="width:80px"/>
            </td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td>
                <a href="/Instractor/ViewInstractorDetails?id=@item.Id">Go to Instractor</a>
            </td>
        </tr>
    }
</table>

